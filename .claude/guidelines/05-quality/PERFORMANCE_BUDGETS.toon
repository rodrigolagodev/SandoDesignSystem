      - type: "Weekly"
        note: "WebPageTest"
      - type: "Monthly"
        note: "CrUX review"
  target_breakdown:
    id: "PB-CWV-TB"
    metrics:
      - name: "LCP"
        target: "<2.5s"
        measurement: "Time to largest content"
        impact: "Page load speed"
      - name: "FID"
        target: "<100ms"
        measurement: "First input delay"
        impact: "Interactivity"
      - name: "CLS"
        target: "<0.1"
        measurement: "Layout shift score"
        impact: "Visual stability"
      - name: "INP"
        target: "<200ms"
        measurement: "Interaction delay (new)"
        impact: "Responsiveness"
      - name: "TTFB"
        target: "<800ms"
        measurement: "Server response time"
        impact: "CDN/hosting"
      - name: "TBT"
        target: "<200ms"
        measurement: "Total blocking time"
        impact: "Main thread work"
    optimizations:
      lcp_optimization:
        - "Preload critical resources"
        - "Optimize images (WebP, AVIF)"
        - "Minimize render-blocking JavaScript"
        - "Use CDN for static assets"
      fid_inp_optimization:
        - "Minimize main thread work"
        - "Break up long tasks (less than 50ms chunks)"
        - "Use web workers for heavy computation"
        - "Defer non-critical JavaScript"
      cls_optimization:
