      - name: "Overlays"
        examples: "modal, dialog, tooltip"
        gzipped: "<18KB"
  library_level:
    id: "PB-BSB-LL"
    bundles:
      - name: "Full library (@sando/components)"
        uncompressed: "<300KB"
        gzipped: "<100KB"
        brotli: "<80KB"
        note: "All components"
      - name: "Tokens (@sando/tokens CSS)"
        uncompressed: "<150KB"
        gzipped: "<40KB"
        brotli: "<30KB"
        note: "All flavors CSS"
      - name: "Individual component import"
        uncompressed: "<40KB"
        gzipped: "<12KB"
        brotli: "<10KB"
        note: "Average component"
      - name: "Vendor dependencies (Lit)"
        uncompressed: "External"
        gzipped: "External"
        brotli: "External"
        note: "Peer dependency"
    future_optimizations:
      - "Lazy-load component variants (defer ghost/outline until needed)"
      - "Split modular styles (load only used size/variant CSS)"
      - "Minify SVG icons aggressively"
  documentation_sites:
    id: "PB-BSB-DS"
    sites:
      - name: "Storybook (@sando/docs)"
        initial_load: "<500KB"
        gzipped: "<150KB"
        lcp_target: "<2.0s"
        note: "Component showcase"
      - name: "VitePress (@sando/site)"
        initial_load: "<300KB"
        gzipped: "<100KB"
        lcp_target: "<1.8s"
        note: "Marketing/docs"
    storybook_note: "Storybook bundles are large by nature (~3MB). Focus on component iframe performance, not Storybook shell."

