meta:
  doc_id: "PB"
  category: "05-quality"
  version: "1.0.0"
  status: "Active"
  last_updated: "2025-11-09"
  owner: "Performance Monitor"

purpose:
  id: "PB-PU"
  description: |
    Establish performance budgets for the Sando Design System to ensure fast, efficient component delivery. Defines bundle size limits, Core Web Vitals targets, Lighthouse CI integration, and monitoring strategies to prevent performance regressions.

targets:
  id: "PB-TGT"
  list:
    - "Sub-100KB component library (gzipped)"
    - "LCP less than 2.5s"
    - "CLS less than 0.1"
    - "FID less than 100ms"

scope:
  id: "PB-SC"
  note: "Components, tokens, documentation sites"

enforcement:
  id: "PB-ENF"
  note: "CI fails on budget violations"

core_rules:
  - id: "PB-CR-R1"
    title: "Component Bundle Size Budgets (Non-Negotiable)"
    summary: "Individual components MUST stay under 10KB (gzipped), full library under 100KB (gzipped)."
    pattern:
      lang: "javascript"
      title: "Vite code splitting configuration"
      code: |
        // vite.config.js
        build: {
          rollupOptions: {
            output: {
              manualChunks(id) {
                if (id.includes('node_modules')) {
                  return 'vendor'; // Separate vendor bundles
                }
              }
            }
          }
        }
    budgets:
      - asset: "Single component"
        uncompressed: "<30KB"
        gzipped: "<10KB"
        brotli: "<8KB"
        enforcement: "CI warning at 80%"
      - asset: "Component + styles"
        uncompressed: "<40KB"
        gzipped: "<12KB"
        brotli: "<10KB"
        enforcement: "CI fails at 100%"
      - asset: "Full library"
        uncompressed: "<300KB"
        gzipped: "<100KB"
        brotli: "<80KB"
        enforcement: "CI fails at 100%"
      - asset: "Vendor (Lit)"
        uncompressed: "External"
        gzipped: "External"
        brotli: "External"
        enforcement: "Peer dependency"
    why: "Users may import only 1-2 components. Large bundles slow initial load, hurt Core Web Vitals, and penalize mobile users on slow networks."
    reference:
      type: "source_file"
      path: "packages/components/vite.config.js"
      lines: "16-27"
      note: "Code splitting configuration"

  - id: "PB-CR-R2"
    title: "Core Web Vitals Targets (Non-Negotiable)"
    summary: "Documentation sites (Storybook, VitePress) MUST meet Core Web Vitals thresholds for 'Good' rating."
    targets:
      - name: "LCP"
        unit: "Largest Contentful Paint"
        good: "<2.5s"
        needs_improvement: "2.5-4.0s"
        poor: ">4.0s"
        note: "Time to largest content"
      - name: "FID"
        unit: "First Input Delay"
        good: "<100ms"
        needs_improvement: "100-300ms"
        poor: ">300ms"
        note: "Time to interactive"
      - name: "CLS"
        unit: "Cumulative Layout Shift"
        good: "<0.1"
        needs_improvement: "0.1-0.25"
        poor: ">0.25"
        note: "Visual stability"
      - name: "INP"
        unit: "Interaction to Next Paint"
        good: "<200ms"
        needs_improvement: "200-500ms"
        poor: ">500ms"
        note: "Responsiveness (new)"
      - name: "TTFB"
        unit: "Time to First Byte"
        good: "<800ms"
        needs_improvement: "800-1800ms"
        poor: ">1800ms"
        note: "Server response"
      - name: "FCP"
        unit: "First Contentful Paint"
        good: "<1.8s"
        needs_improvement: "1.8-3.0s"
        poor: ">3.0s"
        note: "Time to first content"
    measurement: "Use Lighthouse CI, Chrome User Experience Report (CrUX), or Real User Monitoring (RUM)."
    why: "Core Web Vitals are Google ranking factors and directly impact user experience. 53% of mobile users abandon sites that take greater than 3s to load."
    reference:
      type: "external"
      url: "httpss://web.dev/vitals/"
      note: "Web Vitals"

  - id: "PB-CR-R3"
    title: "Lighthouse Performance Score â‰¥90 (Required)"
    summary: "Storybook and VitePress sites MUST score â‰¥90 in Lighthouse Performance audits."
    pattern:
      lang: "toon"
      title: "Lighthouse CI configuration (.lighthouserc.json)"
      code:
        ci:
          assert:
            preset: "lighthouse:recommended"
            assertions:
              categories:performance:
                - "error"
                - minScore: 0.9
              categories:accessibility:
                - "error"
                - minScore: 1.0
              first-contentful-paint:
                - "error"
                - maxNumericValue: 1800
              largest-contentful-paint:
                - "error"
                - maxNumericValue: 2500
              cumulative-layout-shift:
                - "error"
                - maxNumericValue: 0.1
    enforcement:
      - "CI runs Lighthouse on every PR"
      - "Scores less than 90 block merge"
      - "Generate before/after comparison reports"
    why: "Lighthouse audits catch common performance issues (unoptimized images, render-blocking resources, excessive JavaScript)."
    reference:
      type: "external"
      url: "httpss://github.com/GoogleChrome/lighthouse-ci"
      note: "Lighthouse CI"

  - id: "PB-CR-R4"
    title: "Tree-Shaking and Code Splitting (Required)"
    summary: "Components MUST support tree-shaking. Documentation sites MUST use code splitting for routes."
    pattern:
      lang: "javascript"
      title: "Vite preserveModules for tree-shaking"
      code: |
        // From packages/components/vite.config.js
        build: {
          rollupOptions: {
            output: {
              preserveModules: true,        // Enables tree-shaking
              preserveModulesRoot: 'src',
              entryFileNames: '[name].js'
            }
          }
        }
    correct_usage:
      lang: "javascript"
      title: "âœ… Tree-shakable import"
      code: |
        // Only button loaded
        import { SandoButton } from "@sando/components/button";
    anti_pattern:
      lang: "javascript"
      title: "âŒ Imports entire library"
      code: |
        import { SandoButton } from "@sando/components";
    why: "Tree-shaking eliminates dead code. A user importing 1 button should not download 50 components."
    reference:
      type: "source_file"
      path: "packages/components/vite.config.js"
      lines: "24-26"
      note: "preserveModules configuration"

  - id: "PB-CR-R5"
    title: "Monitor Performance Trends (Required)"
    summary: "Track bundle sizes and Core Web Vitals over time to detect regressions early."
    pattern:
      lang: "bash"
      code: |
        # Generate bundle analysis
        pnpm --filter @sando/components build
        pnpm exec vite-bundle-analyzer dist

        # Track sizes over time (CI)
        echo "Button: $(gzip -c dist/components/button/sando-button.js | wc -c) bytes" >> metrics.txt
    tools:
      - name: "Bundlephobia"
        note: "Analyze published package sizes"
      - name: "Lighthouse CI Trend"
        note: "Track Core Web Vitals over time"
      - name: "Size Limit"
        note: "Automated bundle size checks in CI"
    why: "Performance degrades incrementally. Monitoring catches regressions before they accumulate."
    reference:
      type: "external"
      url: "httpss://bundlephobia.com/"
      note: "Bundlephobia"

bundle_size_budgets:
