  review_cycle: "Quarterly"
  next_review: "2025-02-09"

contributing:
  id: "XX-CON"
  summary: "To propose changes to this guideline:"
  process:
    - number: 1
      note: "Open a discussion with rationale for the change"
    - number: 2
      note: "Draft proposed modifications using this template"
    - number: 3
      note: |
        Get review from relevant stakeholders:
        - design-system-architect (architecture changes)
        - ui-designer (design-related changes)
        - qa-expert (quality/testing changes)
        - technical-writer (documentation clarity)
    - number: 4
      note: "Update version number following semantic versioning"
    - number: 5
      note: "Document in changelog"
    - number: 6
      note: "Update affected agents/skills/commands"
  versioning:
    - "MAJOR: Breaking changes that require agent updates"
    - "MINOR: New sections or standards added"
    - "PATCH: Clarifications or typo fixes"