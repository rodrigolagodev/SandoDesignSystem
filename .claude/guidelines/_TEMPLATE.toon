          const badPattern = "problematic code";
      why_wrong: "Specific issues this creates (performance, maintainability, breaks theming, etc.)"
      correct_approach:
        lang: "typescript"
        code: |
          // ✅ CORRECT APPROACH
          const goodPattern = "proper implementation";
